<Window x:Class="ClipToast.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="350" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">

        <TextBlock Text="Font Family" Margin="0,5"/>
        <ComboBox x:Name="FontComboBox" Width="200" />

        <TextBlock Text="Font Size" Margin="0,10,0,5"/>
        <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="30" Width="200" TickFrequency="2" IsSnapToTickEnabled="True"/>

        <TextBlock Text="Font Color" Margin="0,10,0,5"/>
        <Button x:Name="FontColorBtn" Content="Choose Font Color" Width="200"/>

        <TextBlock Text="Background Color" Margin="0,10,0,5"/>
        <Button x:Name="BgColorBtn" Content="Choose Background Color" Width="200"/>

        <TextBlock Text="Border Color" Margin="0,10,0,5"/>
        <Button x:Name="BorderColorBtn" Content="Choose Border Color" Width="200"/>

        <Button Content="Save" Width="200" Margin="0,20,0,0" Click="Save_Click"/>
    </StackPanel>
</Window>